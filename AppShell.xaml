<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WOWStore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WOWStore"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Products"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Details"
        ContentTemplate="{DataTemplate local:Pages.ProductDetailsPage}"
        Route="ProductDetailsPage" />

    <ShellContent
        Title="Favourite"
        ContentTemplate="{DataTemplate local:Pages.FavouritesPage}"
        Route="FavouritesPage" />
</Shell>

